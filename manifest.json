{
  "manifest_version": 2,

  "name": "Twitch following",
  "description": "Shows online twitch streams.",
  "version": "1.0",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "https://api.twitch.tv/*"
  ],
  "background": {
    "persistent": true,
    "page":"background.html"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"

  }
}